#Optimization Model (PuLP)

import pulp

# 1️ Define problem
prob = pulp.LpProblem("Max_Profit", pulp.LpMaximize)

# 2️ Decision variables
A = pulp.LpVariable("Product_A", lowBound=0)
B = pulp.LpVariable("Product_B", lowBound=0)

# 3️ Objective function
prob += 30*A + 20*B, "Total Profit"

# 4️ Constraints
prob += 2*A + B <= 40     # Machine 1 limit
prob += A + 2*B <= 45     # Machine 2 limit

# 5️ Solve the problem
prob.solve()

# 6️ Outputs
print("Status:", pulp.LpStatus[prob.status])
print("Product A =", pulp.value(A))
print("Product B =", pulp.value(B))
print("Maximum Profit =", pulp.value(prob.objective))
